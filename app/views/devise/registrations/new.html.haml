.login-container
  %h1.login-title
    MEMORAND
    %span<>
      O
    M 
  %h2.login-subtitle Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field.login-form
      = f.label :email, "email"
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "login-field"
    .field.login-form
      = f.label :password, "password"
      = f.password_field :password, autocomplete: "new-password", class: "login-field"
    .field.login-form
      = f.label :password_confirmation, "password confirmation"
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "login-field"
    = render "devise/shared/links"
    .actions
      = f.submit "Sign up", class: "login-button"

  
